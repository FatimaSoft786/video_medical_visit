<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/profile_bg">
            <ImageView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_toRightOf="@id/rel">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr.mistrek"
                android:includeFontPadding="false"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/pop_pins_bold"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/un_fill_favorite"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/locationIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/location"
                android:layout_below="@id/name"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lanciano"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/locationIV"
                android:fontFamily="@font/pop_pins_regular"
                android:textColor="#677294"/>
            <TextView
                android:id="@+id/specialistTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dermatologia"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@id/locationIV"
                android:fontFamily="@font/pop_pins_regular"
                android:textColor="#677294"/>
            <RatingBar
                android:id="@+id/rating"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@id/specialistTV"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.5"
                android:theme="@style/MyRatingBar"
                android:stepSize="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.8(10 recensioni)"
                android:fontFamily="@font/pop_pins_medium"
                android:textColor="#333333"
                android:textSize="14sp"
                android:includeFontPadding="false"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/rating"
                android:layout_alignBottom="@id/rating"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_below="@id/rel"
            android:background="@drawable/button_shape"
            android:layout_gravity="center"
            android:layout_height="48dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/pop_pins_semi_bold"
                android:textSize="16sp"
                android:text="Prenota"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>