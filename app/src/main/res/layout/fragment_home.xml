<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/setting_card">
        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,Shahzaib"
            android:includeFontPadding="false"
            android:layout_above="@id/bottomTV"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/pop_pins_bold"
            />
        <TextView
            android:id="@+id/bottomTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your doctor"
            android:textColor="@color/white"
            android:fontFamily="@font/pop_pins_medium"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/nameTV"
            android:layout_alignBottom="@id/bottomTV"
            android:layout_alignParentEnd="true"
            android:src="@drawable/notify"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_bg"
        android:layout_height="50dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/pop_pins_regular"
            android:paddingHorizontal="14dp"
            android:hint="Enter search here"/>
      <RelativeLayout
          android:layout_width="wrap_content"
         android:layout_alignParentEnd="true"
          android:background="@drawable/search_btn_bg"
          android:layout_height="match_parent">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Cera"
              android:paddingHorizontal="10dp"
              android:textSize="@dimen/_13ssp"
              android:fontFamily="@font/pop_pins_medium"
              android:textColor="@color/white"
              android:layout_centerInParent="true"
              />
      </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00497B"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Center"
            android:textSize="24sp"
            android:includeFontPadding="false"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pop_pins_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pop_pins_regular"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/categoriesTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pop_pins_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See all"
            android:includeFontPadding="false"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/categoriesTV"
            android:layout_alignBottom="@id/categoriesTV"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/pop_pins_semi_bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#26022C49">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dermatologia"
            android:padding="10dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/pop_pins_regular"
            android:textSize="14sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/doctorsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All doctors"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pop_pins_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See all"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/doctorsTV"
            android:layout_alignBottom="@id/doctorsTV"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/pop_pins_semi_bold"
            />
    </RelativeLayout>
    
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="10dp"
       app:cardElevation="4dp"
       android:layout_marginHorizontal="20dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:id="@+id/rel"
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_margin="10dp"
               android:background="@drawable/profile_bg">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/user"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_marginTop="12dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:layout_toRightOf="@id/rel">
               <TextView
                   android:id="@+id/name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Dr.mistrek"
                   android:includeFontPadding="false"
                   android:layout_alignParentStart="true"
                   android:fontFamily="@font/pop_pins_bold"
                   android:textSize="20sp"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/un_fill_favorite"
                   android:layout_alignParentEnd="true"/>
               <ImageView
                   android:id="@+id/locationIV"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:contentDescription="@string/app_name"
                   android:src="@drawable/location"
                   android:layout_below="@id/name"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Lanciano"
                   android:includeFontPadding="false"
                   android:textSize="16sp"
                   android:layout_marginHorizontal="5dp"
                   android:layout_below="@id/name"
                   android:layout_toRightOf="@id/locationIV"
                   android:fontFamily="@font/pop_pins_regular"
                   android:textColor="#677294"/>
               <TextView
                   android:id="@+id/specialistTV"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Dermatologia"
                   android:textSize="16sp"
                   android:includeFontPadding="false"
                   android:layout_marginHorizontal="5dp"
                   android:layout_below="@id/locationIV"
                   android:fontFamily="@font/pop_pins_regular"
                   android:textColor="#677294"/>
               <RatingBar
                   android:id="@+id/rating"
                   android:layout_marginTop="5dp"
                   android:layout_marginHorizontal="5dp"
                   android:layout_below="@id/specialistTV"
                   style="?android:attr/ratingBarStyleSmall"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:numStars="5"
                   android:rating="3.5"
                   android:theme="@style/MyRatingBar"
                   android:stepSize="0.5" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="3.8(10 reviews)"
                   android:fontFamily="@font/pop_pins_medium"
                   android:textColor="#333333"
                  android:textSize="14sp"
                   android:includeFontPadding="false"
                   android:layout_alignParentEnd="true"
                   android:layout_alignTop="@id/rating"
                   android:layout_alignBottom="@id/rating"/>


           </RelativeLayout>

           <LinearLayout
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_below="@id/rel"
               android:background="@drawable/button_shape"
               android:layout_gravity="center"
               android:layout_height="48dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:fontFamily="@font/pop_pins_semi_bold"
                   android:textSize="16sp"
                   android:text="Book now"/>
           </LinearLayout>

       </RelativeLayout>
   </androidx.cardview.widget.CardView>


</LinearLayout>